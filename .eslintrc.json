{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals", "standard", "prettier"],
  "overrides": [
    {
      "files": "*.jsx|js|ts|tsx",
      "rules": {
        "max-len": [true, { "limit": 80 }]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"]
  }
}
